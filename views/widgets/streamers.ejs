

<div class="accordion-content hidden pl-8 text-xs transition-all duration-300 ease-in-out max-h-0 overflow-hidden">
    <div class="flex gap-4 flex-wrap py-4 border-b border-gray-200 dark:border-gray-800 justify-center">
      <% if (song.songFile && song.songFile.url) { %>
        <div class="audio-wrapper">
            <!-- Brand Icon Trigger -->
            <button 
                onclick="togglePlayer(this)" 
                class="brand-icon-trigger flex items-center text-gray-600 dark:text-gray-500 hover:text-red-500 dark:hover:text-red-500"
                data-song-id="<%= song.id %>">
                <img src="/images/icon.svg" alt="Play on Our Platform" class="w-5 h-5"/>
            </button>
    
            <!-- Expandable Player -->
            <div class="player-accordion hidden mt-4">
                <div class="audio-player flex flex-col gap-3">
                    <!-- Seeker -->
                    <div class="seeker-container relative h-2 rounded cursor-pointer">
                        <div class="seeker-progress h-full bg-red-500 rounded" style="width: 0%"></div>
                    </div>
                    
                    <!-- Controls -->
                    <div class="controls flex items-center justify-center gap-4">
                        <button class="loop-btn text-gray-600 dark:text-gray-500 hover:text-red-500">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                        </button>
                        <button 
                            onclick="skipBackward('<%= song.id %>')"
                            class="skip-backward-btn text-gray-600 dark:text-gray-500 hover:text-red-500">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"/>
                            </svg>
                        </button>
                        <button 
                            onclick="togglePlay('<%= song.id %>', '<%= song.songFile.url %>')" 
                            class="play-pause-btn" 
                            data-song-id="<%= song.id %>">
                            <svg class="play-icon w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                            <svg class="pause-icon w-8 h-8 hidden" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
                            </svg>
                        </button>
                        <button 
                            onclick="skipForward('<%= song.id %>')"
                            class="skip-forward-btn text-gray-600 dark:text-gray-500 hover:text-red-500">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z"/>
                            </svg>
                        </button>
                        <span class="time-display text-sm text-gray-600 dark:text-gray-500">0:00</span>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

      <% if (song.spotify) { %>
      <a target="_blank" href="<%= song.spotify %>" onclick="incrementPlays('<%= song.id %>')" class="text-gray-600 dark:text-gray-500 hover:text-red-500 dark:hover:text-red-500">Spotify</a>
      <% } %> 
      <% if (song.youtubeMusic) { %>
      <a target="_blank" href="<%= song.youtubeMusic %>"
        onclick="incrementPlays('<%= song.id %>')"  class="text-gray-600 dark:text-gray-500 hover:text-red-500 dark:hover:text-red-500">YouTube Music</a>
      <% } %> 
