<!-- Mega Menu -->
<div
  id="megaMenu"
  class="hidden absolute top-[28px] left-0 -translate-x-1/3 border-t w-full bg-white border-b border-b-gray-200 dark:bg-gray-800 dark:border-gray-700 backdrop-blur-sm z-50 transition-all ease-in-out"
  style="width: calc(100vw * 1); max-width: 1400px"
>
  <div class="container mx-auto w-[90%] sm:w-[90%] lg:w-[75%] py-6">
    <div class="grid grid-cols-5 gap-8">
      <% megaMenu.forEach(group => { %>
        <div>
          <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100 mb-4">
            <%= group.groupName %>
          </h3>
          <ul class="space-y-1">
            <% group.genres.forEach(genre => { %>
              <li>
                <a
                  href="<%= genre.url %>"
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-red-500 dark:hover:text-red-500"
                  ><%= genre.title %></a
                >
              </li>
            <% }) %>
          </ul>
        </div>
      <% }) %>
    </div>
