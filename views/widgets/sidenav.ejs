<!-- Sidenav -->
<nav
  id="sidenav"
  class="hidden md:flex h-[calc(100vh-150px)] overflow-y-auto bg-white dark:bg-gray-900 border-r dark:border-gray-800 transition-all duration-300 sticky top-0"
>
  <!-- Toggle Button -->
  <button
    id="sidenavToggle"
    class="absolute -right-3 bottom-40 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-full p-1 hover:bg-gray-50 dark:hover:bg-gray-800"
  >
    <svg
      id="toggleIcon"
      class="w-5 h-5 text-gray-600 dark:text-gray-300 transform transition-transform cursor-pointer"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M15 19l-7-7 7-7"
      />
    </svg>
