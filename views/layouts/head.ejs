<% 
  const description = 'Access your favourite song on all streaming platform from one convenient place';
  const siteName = 'MusicOne';
%>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- meta tags -->
<meta name="title" content="<%= locals.title %>" >
<meta name="description" content="<%= description %>">

<!-- Open Graph Meta Tags -->
<meta property="og:title" content="<%= locals.title %>" />
<meta property="og:description" content="<%= description %>" />
<meta property="og:image" content="/images/favicon.svg" />
<meta property="og:url" content="<%= locals.route  %>" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="<%= siteName %>" />

<!-- Twitter Card Meta Tags (optional) -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="<%= locals.title %>" />
<meta name="twitter:description" content="<%= description %>" />
<meta name="twitter:image" content="/images/favicon.svg" />


<!-- Favicon -->
<link rel="shortcut icon" href="/images/favicon.svg" type="image/x-icon">

<title>
    <%=locals.title%> &bullet; <%= siteName %>
</title>

<!-- custom css -->
<link rel="stylesheet" href="/css/output.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Typography (Google Fonts) -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">

<!-- Material Icons -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />


<!-- Add this to your head section -->
<script type="module" src="/js/utils/mobileNav.js"></script>
<script src="/js/utils/megaMenu.js"></script>
<script type="module" src="/js/utils/topnav.js"></script>
<script src="/js/incrementPlays.js"></script>
<script src="/js/utils/toggleAccordion.js"></script>
<script src="/js/toggleFavourite.js"></script>
<script src="/js/audioPlayer.js"></script>


<!-- Add this to your layout.ejs or equivalent -->
<script>
    // Prevent flash of wrong theme
    if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
  </script>

<link rel="stylesheet" href="/css/utils/topnav.css" />

<style>
    /* Custom font classes */
    .font-nyt-serif {
        font-family: "Exchange", Georgia, "Times New Roman", serif;
    }
    .font-nyt-sans {
        font-family: "Libre Franklin", Arial, sans-serif;
    }
    /* Custom font classes */
    .font-instrument {
        font-family: 'Instrument Sans', system-ui, sans-serif;
    }

    .accordion-content {
      transition: max-height 0.3s ease, opacity 0.3s ease;
    }

    /* Add this CSS to your global stylesheet */

    .hide-scrollbar::-webkit-scrollbar {
        display: none; /* Hide the scrollbar */
    }
    
    /* Hide scrollbar for Firefox */
    .hide-scrollbar {
        scrollbar-width: none; /* Hide scrollbar */
    }

    /* For WebKit browsers (Chrome, Safari) */
    ::-webkit-scrollbar {
      width: 8px; /* Width of the scrollbar */
      height: 8px; /* Height of the scrollbar */
    }

    ::-webkit-scrollbar-track {
      background: #fff; /* Light mode track color */
    }

    ::-webkit-scrollbar-thumb {
      background: #4a556877; /* Darker gray for the thumb */
      border-radius: 10px; /* Rounded corners for the thumb */
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #2d374877; /* Darker shade on hover */
    }

    /* For Firefox */
    * {
      scrollbar-width: thin; /* Makes the scrollbar thin */
      scrollbar-color: #4a556877 #fff; /* Thumb color and track color */
    }

    /* Dark Mode Styles */
    body.dark-mode {
      scrollbar-color: #a0aec077 #2d374877; /* Thumb color and track color for dark mode */
    }

    body.dark-mode::-webkit-scrollbar-track {
      background: #2d374877; /* Dark mode track color */
    }

    body.dark-mode::-webkit-scrollbar-thumb {
      background: #a0aec077; /* Light gray for the thumb in dark mode */
    }

    body.dark-mode::-webkit-scrollbar-thumb:hover {
      background: #cbd5e177; /* Lighter shade on hover in dark mode */
    }

    /* Add this CSS to your stylesheet */
    .spinner {
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-top: 2px solid #fff; /* Change this color to match your theme */
      border-radius: 50%;
      width: 20px; /* Adjust size as needed */
      height: 20px; /* Adjust size as needed */
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

  .audio-player {
      /* min-width: 250px;
      padding: 0.5rem; */
      border-radius: 0.5rem;
      /* background: rgba(0, 0, 0, 0.05); */
      transition: all 0.3s ease;
  }
  
  .dark .audio-player {
      background: rgba(255, 255, 255, 0.05);
  } 
  
  .seeker-container {
      height: 4px;
      border-radius: 2px;
      overflow: hidden;
  }
  
  .seeker-progress {
      transition: width 0.1s linear;
  }
  
  .play-pause-btn {
      transition: transform 0.2s ease;
  }
  
  .play-pause-btn:hover {
      transform: scale(1.1);
  }
  
  .time-display {
      min-width: 45px;
      text-align: right;
  }  
  
  
  .audio-wrapper {
      position: relative;
  }
  
  .player-accordion {
      transition: opacity 0.3s ease;
  }
  
  .seeker-container {
      width: 100%;
      height: 4px;
      border-radius: 2px;
      overflow: hidden;
  }
  
  .seeker-progress {
      transition: width 0.1s linear;
  }
  
  .controls button {
      transition: transform 0.2s ease;
  }
  
  .controls button:hover {
      transform: scale(1.1);
  }
  
  .mini-player {
      border-top: 1px solid rgba(229, 231, 235, 0.5);
  }


</style>


