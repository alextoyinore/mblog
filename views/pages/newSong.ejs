<!DOCTYPE html>
<html class="dark:bg-gray-900 font-['Instrument Sans']" lang="en">
  <head>
    <%- include('../layouts/head', {title : 'Publish'}) %>
        <!-- Add WaveSurfer.js library -->
    <script src="https://unpkg.com/wavesurfer.js@7/dist/wavesurfer.min.js"></script>
    <script type="module" src="/js/newSong.js"></script>
  </head>
  <body class="w-full h-full">
    <%- include('../widgets/topnav') %>

    <main class="container mx-auto w-[90%] sm:w-[90%] lg:w-[75%] mt-8 pb-20">
      <h1 class="font-instrument text-2xl font-bold mb-8 dark:text-white">
        Add New Song
      </h1>

      <form action="" data-add-song-form method="POST" enctype="multipart/form-data">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Left Column - Song Details -->
          <div class="space-y-6">
            <h2
              class="text-lg font-medium text-gray-800 dark:text-white border-b dark:border-gray-800 pb-2"
            >
              Song Details
            </h2>

            <!-- Song Art Upload -->
            <div class="space-y-2 grid grid-cols-1 lg:grid-cols-2 gap-5">
              <div class="flex flex-col">
                <label
                  class="relative w-full h-62 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-lg cursor-pointer hover:border-gray-400 dark:hover:border-gray-500"
                >
                  <div
                    class="absolute inset-0 flex flex-col items-center justify-center"
                  >
                    <img
                      id="artworkPreview"
                      class="hidden w-full h-full object-cover rounded-lg"
                    />
                    <div id="uploadPrompt" class="flex flex-col items-center">
                      <svg
                        class="w-12 h-12 text-gray-400"
                        stroke="currentColor"
                        fill="none"
                        viewBox="0 0 48 48"
                      >
                        <path
                          d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        />
                      </svg>
                      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        Upload artwork
                      </p>
                      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        PNG, JPG up to 1MB
                      </p>
                    </div>
                  </div>
                  <input
                    type="file"
                    class="hidden"
                    name="artwork"
                    accept="image/*"
                    onchange="previewArtwork(this)"
                  />
                </label>
              </div>
              <!-- Basic Info Fields -->
              <div class="space-y-4">
                <!-- Song Title Input -->
                <input
                  type="text"
                  placeholder="Song Title"
                  name="songTitle"
                  class="w-full bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-600 pl-2 pr-4 py-2 text-sm text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:border-gray-800 dark:focus:border-gray-400 focus:ring-0"
                />

                <!-- Artist Name Input -->
                <input
                  type="text"
                  placeholder="Artist Name"
                  name="artistName"
                  class="w-full bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-600 pl-2 pr-4 py-2 text-sm text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:border-gray-800 dark:focus:border-gray-400 focus:ring-0"
                />

                <!-- Album Title Input -->
                <input
                  type="text"
                  placeholder="Album Title"
                  name="albumTitle"
                  class="w-full bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-600 pl-2 pr-4 py-2 text-sm text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:border-gray-800 dark:focus:border-gray-400 focus:ring-0"
                />

                <!-- Song Release Year Input -->
                <input
                  placeholder="Release Year"
                  type="number"
                  name="releaseYear"
                  min="1900"
                  class="w-full bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-600 pl-2 pr-4 py-2 text-sm text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:border-gray-800 dark:focus:border-gray-400 focus:ring-0"
                />

                <!-- Genre Input -->
                <div class="relative">
                  <input
                    id="genreInput"
                    placeholder="Genre"
                    type="text"
                    name="genre"
                    autocomplete="off"
                    class="w-full bg-gray-50 dark:bg-gray-800 border-b border-gray-300 dark:border-gray-600 pl-2 pr-4 py-2 text-sm text-gray-800 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:border-gray-800 dark:focus:border-gray-400 focus:ring-0"
                  />
                  <!-- Suggestions dropdown -->
                  <div id="genreSuggestions" class="hidden absolute w-full mt-1 bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-md shadow-lg z-10 max-h-48 overflow-y-auto"></div>
                </div>

