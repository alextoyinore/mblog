</head>
<body class="font-nyt-sans w-full h-full">
    <%- include('../widgets/topnav') %>

    <main class="container w-full px-5 lg:px-0">
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Left Column - Sidenav (hidden on small screens) -->
        <div class="lg:col-span-1 hidden lg:block">
          <%- include('../widgets/sidenav') %>
        </div>

        <!-- Right Column - All Songs -->
        <div class="w-full lg:h-[calc(100vh-150px)] lg:overflow-y-auto sticky mb-10 lg:top-0 lg:mt-0">
          <!-- Query Section -->
          <section class="mb-8 lg:pr-4">
            <h1 class="font-instrument lg:text-4xl text-3xl bg-white dark:bg-gray-900 py-5 font-bold dark:text-white flex-1 mb-4 pb-2 border-b dark:border-gray-700 sticky top-10 lg:top-0"><%= locals.title %></h1>

            <div class="flex flex-col gap-0">
              <%- include('../widgets/latest') %>
            </div>
          </section>
        </div>
      </div>

      <!-- Include Play Bar -->
      <%- // include('../widgets/playbar') %>
    </main>

